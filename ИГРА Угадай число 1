import random
print('Привет, давай поиграем в игру !') 
print('я загадаю число, а ты его будешь отгадывать, ')
print('но сначало тебе нужно ввести начальные данные: ')
a,b =map(int, input ('Введи диапазон чисел, в котором я загадаю число, "от" и "до" включительно и через пробел ').split())
r=random.randint(a,b)
n =0
print ('Если вдруг надоест, напиши "хватит" ')
print()
print('ИГРА НАЧАЛАСЬ ')

while n !='хватит': 
    n = int (input('твоё предположение : '))
    if n > r :
        print ('Нее, я загодал число по меньше ')
    elif n < r :
        print ('Бери больше ')
    elif n== r : 
        print('УРААА, ты угадал !!!')
        break
if n =='хватит': 
    print ('жаль, что ты не угодал, но я загадывал число ',r )
print ('СПАСИБО ЗА ИГРУ !!!!!!!!!!')    